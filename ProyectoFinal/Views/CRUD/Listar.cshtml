@model List<Usuarios>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listar</h1>

<div class="card">
    <div class="card-header">
        Lista de usuarios
    </div>
    </div>
    <div class="card-body">
        <a asp-action="GuardarForm" asp-controller="CRUD" class="btn btn-success">Crear nuevo</a>
        <hr />
        <table class="d-lg-table table-bordered">
            <thead>
                <tr>
                    <th>Correo</th>
                    <th>Contraseña</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CORREO</td>
                            <td>@item.CONTRASEÑA</td>
                            <td>   </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>

               

