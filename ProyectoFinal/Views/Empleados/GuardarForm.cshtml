@model Empleados
<!--Definen el tipo de modelo-->
@{
    ViewData["Title"] = "GuardarForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Empleados
    </div>
    <div class="card-body">
        <form asp-action="GuardarForm" asp-controller="Empleados" method="post">
            <div class="mb-3">
                <label class="form-label">Usuario codigo</label>
                <input asp-for="USUARIOS_CODIGO" type="number" class="form-control">
                
            </div> 
            <div class="mb-3">
                <label class="form-label">Tipo Empleado</label>
                <input asp-for="TIPO_EMPLEADO" type="text" class="form-control">         
            </div>
            
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="NOMBRE" type="text" class="form-control">
                
            </div>
            <div class="mb-3">
                <label class="form-label">Apellido</label>
                <input asp-for="APELLIDO" type="text" class="form-control"> 
            </div>
            <div class="mb-3">
                <label class="form-label">Apellido</label>
                <input asp-for="APELLIDO" type="text" class="form-control"> 
            </div>
            <div class="mb-3">
                <label class="form-label">Apellido de supervisor</label>
                <input asp-for="APELLIDO_SUPERVISOR" type="text" class="form-control">
            </div>
            <button asp-action="GuardarForm" asp-controller="Empleados" type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Empleados" class="btn btn-warning">Volver al listado</a>
        </form>
    </div>
</div>
