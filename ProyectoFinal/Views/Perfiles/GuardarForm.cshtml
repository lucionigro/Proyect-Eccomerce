@model Perfiles
@{
    ViewData["Title"] = "GuardarForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Perfiles
    </div>
    <div class="card-body">
        <form asp-action="GuardarForm" asp-controller="Perfiles" method="post">
            <div class="mb-3">
                <label class="form-label">Detalle</label>
                <input asp-for="DETALLE" type="text" class="form-control">
            </div>
            <button asp-action="GuardarForm" asp-controller="Perfiles" type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Perfiles" class="btn btn-warning">Volver al listado</a>
        </form>
    </div>
</div>
