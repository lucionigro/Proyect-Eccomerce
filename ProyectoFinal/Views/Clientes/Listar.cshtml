@model List<Clientes>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Estilos{
    <link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />
}


<div class="card">
    <div class="card-header">
        Lista de Clientes
    </div>
    <div class="card-body">
        <a asp-action="GuardarForm" asp-controller="Clientes" class="btn btn-success">Crear nuevo</a>
        <hr />
        <table id="tb_clientes" class="display" style="width:100%">
            <thead>
                <tr>

                    <th>Cliente cod</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Correo</th>
                    <th>Contraseña</th>
                    <th>Tipo cliente</th>
                    <th>CUIT/DNI</th>
                    <th>Razon social</th>
                    <th>Funciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CLIENTES_COD</td>
                        <td>@item.NOMBRE</td>
                        <td>@item.APELLIDO</td>
                        <td>@item.CORREO</td>
                        <td>@item.CONTRASENIA</td>
                        <td>@item.TIPO_CLIENTE</td>
                        <td>@item.CUIT_DNI</td>
                        <td>@item.RAZON_SOCIAL</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Clientes" class="btn-primary btn-sm" asp-route-id="@item.CLIENTES_COD"><img src="~/img/pencil-square.svg" /></a>
                            <a asp-action="Eliminar" asp-controller="Clientes" class="btn-danger btn-sm" asp-route-id="@item.CLIENTES_COD"><img src="~/img/trash-fill.svg" /></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
         <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
         <script>
             $(document).ready(function () {
                 $('#tb_clientes').DataTable();
             });
         </script>
}