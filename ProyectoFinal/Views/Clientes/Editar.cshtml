@model Clientes
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        Editar clientes
    </div>
    <div class="card-body">
        <form asp-action="Editar" asp-controller="Clientes" method="post">
            <input asp-for="CLIENTES_COD" type="hidden" class="form-control" />
            <input asp-for="USUARIOS_CODIGO" type="hidden" class="form-control" />
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="NOMBRE" type="text" class="form-control">
                
            </div>
            <div class="mb-3">
                <label class="form-label">Apellido</label>
                <input asp-for="APELLIDO" type="text" class="form-control">
               
            </div>
            <div class="mb-3">
                <label class="form-label">Correo</label>
                <input asp-for="CORREO" type="text" class="form-control">
                
            </div>
            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input asp-for="CONTRASENIA" type="text" class="form-control">
                
            </div>
            <div class="mb-3">
                <label class="form-label">Tipo de cliente</label>
                <input asp-for="TIPO_CLIENTE" type="text" class="form-control">
                
            </div>
            <div class="mb-3">
                <label class="form-label">CUIT/DNI</label>
                <input asp-for="CUIT_DNI" type="text" class="form-control">
                
            </div>
            <div class="mb-3">
                <label class="form-label">Razon social</label>
                <input asp-for="RAZON_SOCIAL" type="text" class="form-control">
                
            </div>
            <button asp-action="Editar" asp-controller="Clientes" type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Clientes" class="btn btn-warning">Volver al listado</a>
        </form>
    </div>
</div>
