@model List<Ordenes>


@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
    <link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />
}

    <div class="card">
        <div class="card-header">
            Lista de Ordenes
        </div>
        <div class="card-body">
            <a asp-action="GuardarForm" asp-controller="Ordenes" class="btn btn-success">Crear nuevo</a>
            <hr />
            <table id="tb_ordenes" class="display" style="width:100%">
                <thead>
                    <tr>

                        <th>Codigo de orden</th>
                        <th>Vendedor</th>
                        <th>Fecha de entrega</th>
                        <th>Codigo de cliente</th>
                        <th>Codigo de empleado</th>
                        

                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ORDENES_COD</td>
                        <td>@item.VENDEDOR</td>
                        <td>@item.FECHA_ENTREGA</td>
                        <td>@item.CLIENTES_COD</td>
                        <td>@item.EMPLEADOS_CODIGO</td>

                        <td>
                            <a asp-action="Editar" asp-controller="Ordenes" class="btn-primary btn-sm" asp-route-id="@item.ORDENES_COD">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Ordenes" class="btn-primary btn-sm" asp-route-id="@item.ORDENES_COD">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tb_ordenes').DataTable();
        });
    </script>
}

