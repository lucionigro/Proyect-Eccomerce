@model Ordenes


@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar Ordenes
    </div>
    <div class="card-body">

        <form asp-action="Eliminar" asp-controller="Ordenes" method="post">
            <input asp-for="ORDENES_COD" type="hidden" class="form-control" />
            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar la orden de? : @Html.DisplayTextFor(m => m.VENDEDOR)?
            </div>

            <button asp-action="Eliminar" asp-controller="Ordenes" type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Ordenes" class="btn btn-warning">Volver al listado</a>
        </form>
    </div>
</div>

