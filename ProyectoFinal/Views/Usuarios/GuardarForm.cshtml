@model Usuarios
@{
    ViewData["Title"] = "GuardarForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Usuarios
    </div>
    <div class="card-body">
        <form>
            <div class="mb-3">
                <label class="form-label">Usuario Codigo</label>
                <input asp-for="USUARIOS_CODIGO" type="text" class="form-control">
                <span asp-validation-for="USUARIOS_CODIGO" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Correo</label>
                <input asp-for="CORREO" type="text" class="form-control">
                <span asp-validation-for="CORREO" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input asp-for="CONTRASEÑA" type="password" class="form-control">
                <span asp-validation-for="CONTRASEÑA" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Usuarios" class="btn btn-warning">Volver al listado</a>
        </form>
    </div>
</div>
