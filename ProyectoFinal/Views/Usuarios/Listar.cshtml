@model List<Usuarios>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listar</h1>
<div class="card">
    <div class="card-header">
        Lista de Usuarios
    </div>
    <div class="card-body">
        <a asp-action="GuardarForm" asp-controller="Usuarios" class="btn btn-success">Crear nuevo</a>
        <hr />
        <table class="d-lg-table table-bordered">
            <thead>
                <tr>

                    
                    <th>Correo</th>
                    <th>Contraseña</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td>@item.CORREO</td>
                        <td>@item.CONTRASEÑA</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Usuarios" class="btn-primary btn-sm" asp-route-id="@item.USUARIOS_CODIGO">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Usuarios" class="btn-primary btn-sm" asp-route-id="@item.USUARIOS_CODIGO">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

