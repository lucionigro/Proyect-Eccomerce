@model List<Usuarios>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Estilos{
    <link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />
}

<div class="card">
    <div class="card-header">
        Lista de Usuarios
    </div>
    <div class="card-body">
        <a asp-action="GuardarForm" asp-controller="Usuarios" class="btn btn-success">Crear nuevo</a>
        <hr />
        <table id="tb_usuarios" class="display" style="width:100%">
            <thead>
                <tr>

                    <th>Usuario codigo</th>
                    <th>Correo</th>
                    <th>Contraseña</th>
                    <th>Funciones</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.USUARIOS_CODIGO</td>
                        <td>@item.CORREO</td>
                        <td>@item.CONTRASENIA</td>
                        <td>
                            <a asp-action="Editar" asp-controller="Usuarios" class="btn-primary btn-sm" asp-route-id="@item.USUARIOS_CODIGO"><img src="~/img/pencil-square.svg" /></a>
                            <a asp-action="Eliminar" asp-controller="Usuarios" class="btn-danger btn-sm" asp-route-id="@item.USUARIOS_CODIGO"><img src="~/img/trash-fill.svg" /></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tb_usuarios').DataTable();
        });
    </script>
}
